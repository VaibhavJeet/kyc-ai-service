# AI Service Configuration
# Ultra-Lightweight Python Microservice for TaskHub
# Handles: Chat, Content Generation, KYC Verification
# Total footprint: ~325MB disk, ~750MB RAM peak

# ============================================
# API Settings
# ============================================
# API Key - generate with: openssl rand -hex 32
# Must match AI_SERVICE_API_KEY in backend .env
API_KEY=your-ai-service-api-key
HOST=0.0.0.0
PORT=8001
DEBUG=false

# LLM Settings - Gemma 3 270M Q4
LLM_MODEL_PATH=./models/gemma-3-270m-it-q4_k_m.gguf
LLM_CONTEXT_SIZE=2048
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.7
LLM_THREADS=4

# Face Detection - Ultra-Light Face Detector
FACE_DETECTOR_MODEL=./models/ultra_light_face_slim.onnx
FACE_DETECTION_THRESHOLD=0.7

# Face Recognition - MobileFaceNet
FACE_RECOGNITION_MODEL=./models/mobilefacenet_int8.onnx
FACE_MATCH_THRESHOLD=0.45

# Age/Gender - MobileNetV2
AGE_GENDER_MODEL=./models/age_gender_mobilenet_int8.onnx

# OCR - Tesseract
TESSERACT_LANG=eng
TESSERACT_CONFIG=--oem 3 --psm 6

# KYC Settings
LIVENESS_THRESHOLD=0.6
MIN_FACE_SIZE=80

# Model cache
MODEL_CACHE_DIR=./models
